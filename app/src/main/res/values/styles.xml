<resources>
    <style name="loginFieldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="RegisterFieldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>


    <style name="btnstyle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:background">@drawable/rounded_btn</item>
    </style>

    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/selected</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/selected</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/unselected</item>
    </style>


</resources>